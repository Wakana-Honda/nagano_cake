<h2>商品編集</h2>

<%= form_with model:[:admin,@item],local:true do |f| %>
 <div class="form-group">
  <%= f.label :商品画像 %>
  <%= f.file_field :imege_id,class:"form-control-file user_image", accept:"image/*" %>
 </div>
 <div class="form-group">
  <%= f.label :商品名 %>
  <%= f.text_field :name,class:"name",id:"item_name" %>
 </div>
 <div class="form-group">
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction,class:"text",id:"item_introduction" %>
 </div>
 <div class="form-group">
  <%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, options = { include_blank: true },id:"item_genre_name" %>
 </div>
 <div class="form-group">
  <%= f.label :税抜価格 %>
  <%= f.text_field :price,class:"name",id:"item_price" %>円
 </div>
 <div class="from-group">
  <%= f.label :販売ステータス %>
  <!--id登録してね-->
  <%= f.radio_button(:is_active, "販売中") %>
  <%= f.label(:is_active, "販売中", value:"販売中") %>
  
  <%= f.radio_button(:is_active, "販売中止") %>
  <%= f.label(:is_active, "販売中止", value:"販売中止") %>
  
 </div>
 
 <div class="form-group">
  <%= f.submit '変更を保存',class:"btn btn-success" %>
 </div>
 
<% end %>
