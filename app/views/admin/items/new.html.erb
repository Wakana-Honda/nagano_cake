<div class="container">
 
<div class="p-3 mb-2 bg-light text-dark">商品新規登録</div>

<%= form_with model:[:admin,@item],local:true do |f| %>

 <div class="form-group">
  <%= f.label :商品画像 %>
  <%= f.file_field :image_id,class:"form-control-file user_image", accept:"image/*" %>
 </div>
 <div class="form-group">
  <%= f.label :商品名 %>
  <%= f.text_field :name,class:"name" %>
 </div>
 <div class="form-group">
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction,class:"text" %>
 </div>
 <div class="form-group">
  <%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, options = { include_blank: true } %>
 </div>
 <div class="form-group">
  <%= f.label :税抜価格 %>
  <%= f.text_field :price,class:"name" %>円
 </div>
