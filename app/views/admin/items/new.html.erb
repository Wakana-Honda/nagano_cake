 <!-- <= f.radio_button(:is_active, "販売中止") %>-->
 <!-- <= f.label(:is_active, "販売中止", value:"販売中止") %>-->
  
 <!--</div>-->
 <div class="form-group">
  <%= f.submit '新規登録',class:"btn btn-success" %>
 </div>
 
<% end %>

</div>
