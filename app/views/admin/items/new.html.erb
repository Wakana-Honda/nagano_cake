<h2>商品新規登録</h2>


<%= form_with model:[:admin,@item],local:true do |f| %>
 <div class="form-group">
  <%= f.label :商品画像 %>
  <%= f.file_field :imege_id,class:"form-control-file user_image", accept:"image/*" %>
 </div>
 <div class="form-group">
  <%= f.label :商品名 %>
  <%= f.text_field :name,class:"name" %>
 </div>
 <div class="form-group">
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction,class:"text" %>
 </div>
 <div class="form-group">
  <%= f.label :ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, options = { include_blank: true } %>
 </div>
 <div class="form-group">
  <%= f.label :税抜価格 %>
  <%= f.text_field :price,class:"name" %>円
 </div>
 <div class="form-group">
  <%= f.label :販売ステータス %>
  
  <%= f.radio_button :is_active, '1' %>
  <%= f.label :is_active, '販売中', value: 1 %>
  
  <%= f.radio_button :is_active, '0' %>
  <%= f.label :is_active, '販売中止', value: 0 %>

 </div>
 <div class="form-group">
  <%= f.submit '新規登録',class:"btn btn-success" %>
 </div>
 
<% end %>
