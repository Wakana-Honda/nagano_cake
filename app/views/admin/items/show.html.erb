<div class="container">
 
<div class="p-3 mb-3 bg-light text-dark">商品詳細</div>

<div class="row">
 
 <div>
  <%= image_tag @item.get_item_image(100,100) %>
 </div>

 <table class="table table-borderless">
  <tbody>
   <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
   </tr>
   <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
   <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
   </tr>
   <tr>
    <td>税込価格<br>(税抜価格)</td>
    <td><%= @item.price %></td>
   </tr> 
  </tbody>
  </table>
  
  <div class ="d-grid gap-2 mx-auto">    
   <%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-success " %>
　</div>
　
  </div>