<h2>商品詳細</h2>

 <% if @item.image_id.attached? %>
  <%= image_tag @item.get_image_id(100,100) %>
 <% else %>
  <%= image_tag 'no_image', size: "100x100" %>
 <% end %>


 <table class="table">
  <tbody>
   <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
   </tr>
   <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
   <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
   </tr>
   <tr>
    <td>税込価格<br>(税抜価格)</td>
    <td><%= @item.price %></td>
   </tr> 
   <tr>
    <td>販売ステータス</td>
    <td><%= @item.is_active %></td>
   </tr>
   <tr>
    <td><%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-sm btn-success" %></td>
   </tr>  
  </tbody>
  </table>