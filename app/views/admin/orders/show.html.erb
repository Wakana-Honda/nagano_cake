
<div class="container">
 <div class="p-3 mb-2 bg-light text-dark">注文履歴詳細</div>
</div>

 <table class="table table-borderless">
  <tr><th>購入者</th><td><%= @order.customer.first_name %><%= @order.customer.last_name %></td></tr>
  <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
  <tr><th>配送先</th><td><%= @order.postal_code %><%= @order.adress %><br><%= @order.name %></td></tr>
  <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
 </table>
  
 <table class="table table-borderless">
  <thead class = "thead-light">
   <tr>
     <th>商品名</th>
     <th>単価（税込）</th>
     <th>数量</th>
     <th>小計</th>
    </tr>
  </thead>
  
  <tbody>
   
   <% @order.order_details.each do |order_detail| %>
   <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= (order_detail.item.price*1.1).floor %></td>
    <td><%= order_detail.amount %></td>
    <td><%= (order_detail.item.price*1.1).floor * order_detail.amount %></td>
   </tr>
  <% end %>
  </tbody>
</table>




