<div class=container>

<div class="container">
 <div class="p-3 mb-2 bg-light text-dark">注文詳細</div>
</div>

 <table class="table">
  <tr><th>購入者</th><td></td></tr>
  <tr><th>注文日</th><td></td></tr>
  <tr><th>配送先</th><td></td></tr>
  <tr><th>支払方法</th><td></td></tr>
  <tr><th>注文ステータス</th><td></td></tr>
 </table>
  
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
     <th>商品名</th>
     <th>単価（税込）</th>
     <th>数量</th>
     <th>小計</th>
     <th>製作ステータス</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
   <% @orders.each do |customer| %>
   <tr>
    <th><%= customer.id %></th>
    <th>
     <%= link_to admin_customer_path(customer.id) do %>
     <%= customer.first_name %><%= customer.last_name %>
     <% end %>
    </th>
    <th><%= customer.email %></th>
    <th>有効or退会</th>
   </tr>
  <% end %>
  </tbody>
</table>

</div>



