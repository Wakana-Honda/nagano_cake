<div class="container">
 <div class="p-3 mb-2 bg-light text-dark">注文履歴一覧</div>

 <table class="table">
   <thead class = "thead-light">
    <tr>
     <th>購入日時</th>
     <th>購入者</th>
     <th>注文個数</th>
    </tr>
   </thead>
   
   <tbody>
   <% @orders.each do |order| %>
    <tr>

    <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %></td>
    <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
    <td><%= order.order_details.sum(:amount) %></td>
    </tr>
   <% end %>
  </tbody>
  
  </table> 
  
  <%= paginate @orders %>
  
</div>
