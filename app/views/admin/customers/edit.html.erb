<div class="container">

<div class="p-3 mb-3 bg-light text-dark"><%= @customer.first_name %><%= @customer.last_name %>の会員情報編集</div>

<%= form_with model: @customer,url:admin_customer_path(@customer.id),method: :patch do |f| %>
 
 <%= f.label :会員ID %>
 <%=@customer.id %>
 
 <%= f.label :名前 %>
 <%= f.text_field :first_name %><%= f.text_field :last_name %>
 
 <%= f.label :フリガナ %>
 <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
 
 <%= f.label :メールアドレス %>
 <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
 
 <%= f.label :郵便番号（ハイフンなし） %>
 <%= f.text_field :postal_code %>
 
 <%= f.label :住所 %>
 <%= f.text_field :adress %>
 
 <%= f.label :電話番号（ハイフンなし）%>
 <%= f.text_field :telephone_number %>
 
 <div>会員ステータス</div>
     <%= f.radio_button :is_deleted, false%>
		   <%= f.label :is_deleted,"有効", value: false, class: "radio-label label-size" %>
     <%= f.radio_button :is_deleted, true %>
		   <%= f.label :is_deleted, "退会", value: true, class: "radio-label label-size" %>
  
 <%= f.submit "変更を保存",class:"btn btn-sm btn-success"%>
 
<% end %>




