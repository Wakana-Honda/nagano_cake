
<div class=container>

<div class="container">
 <div class="p-3 mb-2 bg-light text-dark">会員一覧</div>
</div>

 <table class="table">
   <thead class ="thead-light">
    <tr>
     <th>会員ID</th>
     <th>氏名</th>
     <th>メールアドレス</th>
     <th>ステータス</th>
    </tr>
   </thead>
   
   <tbody>
  <% @customers.each do |customer| %>
   <tr>
    <th><%= customer.id %></th>
    <th>
     <%= link_to admin_customer_path(customer.id) do %>
     <%= customer.first_name %><%= customer.last_name %>
     <% end %>
    </th>
    <th><%= customer.email %></th>
    <th>
     <% if customer.is_deleted == false %>
      <div class ="text-success">有効</div>
      <% else %>
      <div class ="text-secondary">退会</div>
      <% end %>
    </th>
   </tr>
  <% end %>
  </tbody>
  
  </table> 
  
  <%= paginate @customers %>
  
</div>



