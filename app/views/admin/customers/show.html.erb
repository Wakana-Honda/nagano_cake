<div class="container">

<div class="p-3 mb-3 bg-light text-dark"><%= @customer.first_name %><%= @customer.last_name %>の会員詳細</div>

<table>
 
<tbody>
  <tr><th>会員ID</th><td><%=@customer.id %></td></tr>
  <tr><th>氏名</th><td><%=@customer.first_name %><%=@customer.last_name %></td></tr>
  <tr><th>カナ</th><td><%=@customer.first_name_kana %><%=@customer.last_name_kana %></td></tr>
  <tr><th>郵便番号</th><td><%=@customer.postal_code %></td></tr>
  <tr><th>住所</th><td><%=@customer.adress %></td></tr>
  <tr><th>電話番号</th><td><%= @customer.telephone_number %></td></tr>
  <tr><th>メールアドレス</th><td><%=@customer.email %></td></tr>
  <tr><th>会員ステータス</th>
   <td>
    <% if @customer.is_deleted == false %>
      <div class ="text-success">有効</div>
      <% else %>
      <div class ="text-secondary">退会</div>
    <% end %>
   </td>
  </tr>

   <tr>
    <td><%= link_to "編集する", edit_admin_customer_path,class:"btn btn-sm btn-success" %></td>
    <td><%= link_to "注文履歴一覧を見る", admin_customers_path,class:"btn btn-sm btn-primary" %></td>
   </tr>  
  </tbody>
  
  </table>
  
  </div>