<h4>ジャンル一覧・追加</h4>

<%= form_with model: [:admin,@genre] do |f| %>
 <%= f.label :ジャンル名 %>
 <%= f.text_field :name,class:"name" %>
 <%= f.submit '新規登録',class:"btn btn-success" %>
<% end %>


<div class="col-md-8 offset-md-1">
<table class="table table-hover table-inverse">
  <thead>
   <tr>

     <th>ジャンル</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
   <tr></tr>    
   <tr>
    <th><%= @genre.name %></th>
    <th></th>
    <th><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success left-space" %></th>
   </tr>
  <% end %>
  </tbody>
</table>  