<div class="container">
 
<div class="p-3 mb-3 bg-light text-dark">注文履歴詳細</div>

<div class="row">
 
<div><strong>注文情報</strong></div>
 <table class="table table-bordered">
  <tr><th class ="table-active">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
  <tr><th class ="table-active">配送先</th><td><%= @order.postal_code %><%= @order.adress %><%= @order.name %></td></tr>
  <tr><th class ="table-active">支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
 </table>

<div><strong>請求情報</strong></div>
 <table class="table table-bordered">
  <tr><th class ="table-active">商品合計</th><td><%= @total %></td></tr>
  <tr><th class ="table-active">配送料</th><td><%= @order.shopping_cost %></td></tr>
   <% @order.total_payment = @order.shopping_cost + @total %>
  <tr><th class ="table-active">ご請求金額</th><td><%= @order.total_payment %></td></tr>
 </table>
 
 </div>
 
 

<div><strong>注文内容</strong></div>

 <table class="table table-bordered">
  <thead class = "thead-light">
   <th>商品</th>
   <th>単価（税込）</th>
   <th>個数</th>
   <th>小計</th>
  </thead>
  
  <tbody>

   <% @order_items.each do |order_item| %>
   <tr> 
    <td><%= order_item.item.name %></td>
    <td><%= (order_item.item.price*1.1).floor %></td>
    <td><%= order_item.amount %></td>
    <td><%= (order_item.item.price*1.1).floor * order_item.amount %></td>
   </tr>
  <% end %>
 
 </tbody>
 
 </table>
 
 
 