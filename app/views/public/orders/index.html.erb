<h4>注文履歴一覧</h4>

<table>
 <thead>
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>注文詳細</th>
  </thead>
 
 <tbody>
  <% @orders.each do |order| %>
  
  <tr>
   <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
   <td><%= order.postal_code %><%= order.adress %><%= order.name %></td>
   
   <td>
   <% order.items.each do |cart_item| %>
    <%= cart_item.name %>
   <% end %>
   </td>
   
   <td><%= link_to "表示する",order_path(order),class:"btn-sm btn-primary" %></td>
  
  </tr>
  
  <% end %>
 </tbody>
 
</table>

