<div class="container">
 
<div class="p-3 mb-3 bg-light text-dark">注文履歴一覧</div>

<table class="table table-bordered">
 <thead class = "thead-light">
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>注文詳細</th>
  </thead>
 
 <tbody>
  <% @orders.each do |order| %>
  
  <tr>
   <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
   <td><%= order.postal_code %><%= order.adress %><br><%= order.name %></td>
   
   <td>
   <% order.items.each do |cart_item| %>
    <%= cart_item.name %>
   <% end %>
   </td>
   <td><%= order.total_payment %></td>
   
   <td><%= link_to "表示する",order_path(order),class:"btn-sm btn-primary" %></td>
  
  </tr>
  
  <% end %>
 </tbody>
 
</table>

</div>

