
<table class="table">
  <tbody>
   <tr>
    <td><%= @item.name %></td>
   </tr>
   <tr>
    <td><%= @item.introduction %></td>
  </tr>
   <tr>
    <td>¥<%= @item.price %>（税込）</td>
   </tr>
  </tbody>
  </table>

<%= form_with(model: @cart_item, url:cart_items_path(@item.id),local:true)do |f| %>

  <%= f.label :個数選択 %>
  <%= f.hidden_field :item_id,value:@item.id  %>
  <%= f.select :amount, *[1..10] %>
  
  
  <%= f.submit "カートに入れる",class:"btn btn-sm btn-success" %>
  <!--POSTメソッドで送られる-->
  
  <%= link_to "カートに入れる", cart_items_path(@item.id),class:"btn btn-sm btn-success" %>
　<!--GETメソッドで送られる-->
　
<% end %>