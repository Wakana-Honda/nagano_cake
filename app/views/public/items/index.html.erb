<div class = "container">

<h3>商品一覧(全<%= @item.total_count %>件）</h3>
 <div class = "row mx-4">
   <% @item.each do |item|%>
    <div class=”col”>
    <div> 
    <%= link_to item_path(item.id) do %>
     <% if item.image_id.attached? %>
      <%= image_tag item.image_id, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
    <% end %>
    </div>
    <div><%= item.name %></div>
    <div>¥<%= item.price %></div>
   </div>
   <% end %>
  </div>
 
 <div class = "text-center">
  <%= paginate @item %>
 </div> 
  
 
  
  </div>
 
  

  
  
  

