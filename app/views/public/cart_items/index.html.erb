<h3>ショッピングカート</h3>

 <%= link_to "カートを空にする", destroy_all_cart_items_path,method: :delete,class:"btn btn-sm btn-danger" %>


<% @cart_items.each do |cart_item|%>

  <p>商品名<%= cart_item.item.name %></p>
  <p>単価（税込）<%= cart_item.item.with_tax_price %></p>
  <p>数量：<%= cart_item.amount %></p>
  <p>小計<%= cart_item.subtotal %></p>
  <p>合計金額<%= @total += cart_item.subtotal %></p>
  
<% end %>

