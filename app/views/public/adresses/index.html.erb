<h3>配送先登録/一覧</h3>

<%= form_with model: @adress,local:true do |f| %>

<div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code %>
 </div>
 <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :adress %>
 </div>
 <div class="field">
  <%= f.label :名前 %>
  <%= f.text_field :name %>
 </div>
 
 <div class="actions">
  <%= f.submit '新規登録',class:"btn btn-success"%>
 </div>
 
 <% end %>
 
 <table>
  <thead>
  <tr>
   <th>郵便番号</th>
   <th>住所</th>
   <th>宛名</th>
   <th>
   </th>
  </tr>
  </thead>
  
  <tbody>
  <% @adresses.each do |adress|%>
  <tr>
  <th><%= adress.postal_code %></th>
  <th><%= adress.adress %></th>
  <th><%= adress.name %></th>
  <th>
   <%= link_to "編集する", edit_adress_path(adress), class:"btn btn-success left-space" %>
   <%= link_to "削除する", adress_path(adress),method: :delete, class:"btn btn-danger left-space" %>
  </th>
  </tr>
  <% end %>
  </tbody>
   
 </table>
 
 