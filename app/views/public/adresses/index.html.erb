<div class="container">
 
<div class="p-3 mb-3 bg-light text-dark">配送先登録／一覧</div>

<%= form_with model: @adress,local:true do |f| %>
 <div class="field">
  <%= f.label :郵便番号（ハイフンなし） %>
  <%= f.text_field :postal_code %>
 </div>

 <div class="field">
  <%= f.label :住所 %>
  <%= f.text_field :adress,class:"mx-3" %>
 </div>
 
 <div class="field">
  <%= f.label :宛名 %>
  <%= f.text_field :name,class:"mx-3" %>
 </div>


 <div class="actions text-right mb-3">
  <%= f.submit '新規登録',class:"btn btn-success"%>
 </div>
 
 <% end %>
 
 <table class="table table-bordered">
  <thead class = "thead-light">
  <tr>
   <th>郵便番号</th>
   <th>住所</th>
   <th>宛名</th>
   <th>
   </th>
  </tr>
  </thead>
  
  <tbody>
  <% @adresses.each do |adress|%>
  <tr>
  <th><%= adress.postal_code %></th>
  <th><%= adress.adress %></th>
  <th><%= adress.name %></th>
  <th>
   <%= link_to "編集する", edit_adress_path(adress), class:"btn btn-success left-space" %>
   <%= link_to "削除する", adress_path(adress),method: :delete, class:"btn btn-danger left-space" %>
  </th>
  </tr>
  <% end %>
  </tbody>
   
 </table>
 
 