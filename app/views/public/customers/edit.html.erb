<div class="container">
 
<div class="p-3 mb-2 bg-light text-dark">会員情報</div>

<%= form_with model: @customer, url:customers_infomation_path, method: :patch,local:true do |f| %>
 
 <div>
 <%= f.label :氏名 %>
 <%= f.text_field :first_name %><%= f.text_field :last_name %>
 </div>
 <div>
 <%= f.label :フリガナ %>
 <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
 </div>
 <div>
 <%= f.label :郵便番号（ハイフンなし） %>
 <%= f.text_field :postal_code %>
 </div>
 <div>
 <%= f.label :住所 %>
 <%= f.text_field :adress %>
 </div>
 <div>
 <%= f.label :電話番号（ハイフンなし）%>
 <%= f.text_field :telephone_number %>
 </div>
 <div>
 <%= f.label :メールアドレス %>
 <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
 </div>
 
 <div class="row">
  <div class="pr-3"><%= f.submit "編集内容を保存",class:"btn btn-success"%></div>
  <div><%= link_to "退会する",customers_unsubscribe_path,class:"btn btn-danger" %></div>
 </div>

<% end %>

