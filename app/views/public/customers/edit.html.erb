<h4>会員情報編集</h4>

<table>
<%= form_with model: @customer, url:customers_infomation_path, method: :patch,local:true do |f| %>
 <tbody>
 <tr>
  <th><%= f.label :氏名 %></th>
  <td><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
 </tr>
 <tr>
  <th><%= f.label :フリガナ %></th>
  <td><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></td>
 </tr>
 <tr>
  <th><%= f.label :郵便番号（ハイフンなし） %></th>
  <td><%= f.text_field :postal_code %></td>
 </tr>
 <tr>  
   <th><%= f.label :住所 %></th>
   <td><%= f.text_field :adress %></td>
  </tr>
  <tr>
    <th><%= f.label :電話番号（ハイフンなし）%></th>
    <td><%= f.text_field :telephone_number %></td>
  </tr>
  <tr>
  <th><%= f.label :メールアドレス %></th>
  <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
 </tr>
  
 </tbody>
 
 <%= f.submit "編集内容を保存",class:"btn btn-sm btn-success"%>

<% end %>

</table>

 <%= link_to "退会する",customers_unsubscribe_path,class:"btn btn-danger" %>

