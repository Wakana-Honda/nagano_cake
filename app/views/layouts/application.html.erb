<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1ae5e8c4d7.js" crossorigin="anonymous"></script>
  </head>

  <body>
   <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mt-3 mb-3">
     <div class="container">
      <div class="row">
       <!--<div class="col-lg-2">-->
      <a class="navbar-brand" href="/">
        <span>パティシエ　信濃川</span>
      </a>
      </div>
      <!--</div>-->
    <div class="row">
     <!--<div class="col-lg-2">-->
     <ul class="navbar-nav " style="flex-direction: row;">
       
     <% if customer_signed_in? %>
      <li class="nav-item px-2">
        <%= link_to customers_my_page_path, class:'nav-link text-light' do %>
         マイページ
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to items_path, class:'nav-link text-light' do %>
         商品一覧
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to cart_items_path, class:'nav-link text-light' do %>
        カート
       <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to destroy_customer_session_path,method: :delete, class:'nav-link text-light' do %>
        ログアウト
        <% end %>
      </li>
     <% elsif admin_signed_in? %>
      <li class="nav-item px-2">
        <%= link_to admin_items_path,class:'nav-link text-light' do %>
         商品一覧
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to admin_customers_path,class:'nav-link text-light' do %>
        会員一覧
        <% end %>
      </li>
      <!--id作成してからpath設定-->
      <li class="nav-item px-2">
        <%= link_to admin_path,class:'nav-link text-light' do %>
        注文履歴
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to admin_genres_path,class:'nav-link text-light' do %>
        ジャンル一覧
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to destroy_admin_session_path,method: :delete,class:'nav-link text-light' do %>
        ログアウト
        <% end %>
      </li>
     <% else %>
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          About
        <% end %>
      </li> 
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          商品一覧
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          新規登録
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          ログイン
        <% end %>
      </li>
     <% end %>
      </ul>
      </div>
      </div>
      
     </nav> 
    </header>
    <%= yield %>
    
  <footer>
   <div class="container">
     <!--<div class="border-top border-dark" style="padding:30px;">-->
     <div class="row">
      <div class="mx-auto">
      <a class="navbar-brand px-3" href="/">
       <i class="fa-brands fa-twitter"></i>
      </a>
      <a class="navbar-brand px-3" href="/">
       <i class="fa-brands fa-facebook"></i>
      </a>
      <a class="navbar-brand px-3" href="/">
       <i class="fa-brands fa-instagram"></i>
      </a>
      <a class="navbar-brand px-3" href="/">
       <i class="fa-brands fa-line"></i>
      </a>
      </div>
     </div>
    </div>
    </div>
  </footer>
  
  </body>
</html>
