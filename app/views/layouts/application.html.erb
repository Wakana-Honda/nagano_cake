<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1ae5e8c4d7.js" crossorigin="anonymous"></script>
  </head>

  <body>
   <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mt-3 mb-3">
     <div class="container">
      <div class="row">
       <!--<div class="col-lg-2">-->
      <a class="navbar-brand" href="/">
        <span>パティシエ　信濃川</span>
      </a>
      </div>
      <!--</div>-->
    <div class="row">
     <!--<div class="col-lg-2">-->
     <ul class="navbar-nav " style="flex-direction: row;">
       
     <% if customer_signed_in? %>
      <li>
        <%= link_to "マイページ",customers_my_page_path %>
      </li>
      <li>
        <%= link_to "商品一覧",items_path %>
      </li>
      <li>
        <%= link_to "カート",cart_items_path %>
      </li>
      <li>
        <%= link_to "ログアウト",destroy_customer_session_path,method: :delete %>
      </li>
     <% elsif admin_signed_in? %>
      <li class="nav-item">
        <%= link_to "商品一覧",admin_items_path %>
      </li>
      <li>
        <%= link_to "会員一覧",admin_customers_path %>
      </li>
      <!--id作成してからpath設定-->
      <li>
        <%= link_to "注文履歴一覧",admin_path %>
      </li>
      <li>
        <%= link_to "ジャンル一覧",admin_genres_path %>
      </li>
      <li>
        <%= link_to "ログアウト",destroy_admin_session_path,method: :delete %>
      </li>
     <% else %>
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          About
        <% end %>
      </li> 
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          商品一覧
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          新規登録
        <% end %>
      </li>
      <li class="nav-item px-2">
        <%= link_to admin_session_path, class:'nav-link text-light' do %>
          ログイン
        <% end %>
      </li>
     <% end %>
      </ul>
      </div>
      <!--</div>-->
      </div>
      <!--<form class="form-inline my-2 my-lg-0">-->
